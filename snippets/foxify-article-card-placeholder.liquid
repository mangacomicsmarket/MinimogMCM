{% liquid
    assign SHORT_ID_KEY = 'f'
    assign articleCard = ''
    assign theme_settings = shop.metafields.foxify.theme_settings.value
    if theme_settings != blank
        assign articleCard = theme_settings['articleCard']
    endif
    assign cardStyle = articleCard.style
    assign ratio = articleCard.imageRatio
    assign textAlign = articleCard.textAlign
    assign showDate = articleCard.showDate
    assign showTag = articleCard.showTag
    assign showReadmore = articleCard.showReadmore
    assign showExcerpt = articleCard.showExcerpt
    if image_ratio == nil or image_ratio == 'adapt'
        assign ratio = article.image.aspect_ratio
    endif
%}
<div class="{{ SHORT_ID_KEY }}:article-card {{ SHORT_ID_KEY }}:article-card__placeholder {{ SHORT_ID_KEY }}:image--hover-effect {{ SHORT_ID_KEY }}:article-card-align--{{ textAlign | default: 'left' }} {{ SHORT_ID_KEY }}:article-card-style--{{ cardStyle | default: '1' }}">
    <div class="{{ SHORT_ID_KEY }}:article-card__image">
        <div class="{{ SHORT_ID_KEY }}:image {{ SHORT_ID_KEY }}:card" style="--f-aspect-ratio: {{ ratio }};">
            {{ 'image' | placeholder_svg_tag: 'f:placeholder-svg' }}
        </div>
    </div>
    <div class="{{ SHORT_ID_KEY }}:article-card__info">
        {% if showTag %}
            <span class="{{ SHORT_ID_KEY }}:article-card__tag">{{ 'onboarding.blog_tag' }}</span>
        {% endif %}
        {% if showDate %}
            <p class="{{ SHORT_ID_KEY }}:article-card__date">
                {{ 'now' | date: "%b %d, %y" }}
            </p>
        {% endif %}
        <h3 class="{{ SHORT_ID_KEY }}:article-card__title {{ SHORT_ID_KEY }}:gs-card-title">
            {{ 'foxify.onboarding.blog_title' | t }}
        </h3>
        {% if showExcerpt %}
            <div class="{{ SHORT_ID_KEY }}:article-card__excerpt t{{ SHORT_ID_KEY }}:ext-subtext">
                {{ 'foxify.onboarding.blog_excerpt' | t }}
            </div>
        {% endif %}
        {% if showReadmore %}
            <a href="#"
               class="{{ SHORT_ID_KEY }}:btn {{ SHORT_ID_KEY }}:gs-link-button {{ SHORT_ID_KEY }}:article-card__readmore">
                {{ 'foxify.blogs.article.read_more' | t }}
            </a>
        {% endif %}
    </div>
</div>
