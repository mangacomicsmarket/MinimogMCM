{% comment %}
This file is auto-generated by Foxify.
This file can be re-written at any time. Please do not update this file directly.
{% endcomment %}

{% liquid
	assign global_styles = shop.metafields.foxify.global_styles.value
	assign theme_settings = shop.metafields.foxify.theme_settings.value
	assign layoutSettings = theme_settings.layout
	assign isFoxifyPage = true
	comment
	if template == blank or template.suffix contains 'foxify-' or template == 'index'
		assign isFoxifyPage = true
	endif
	endcomment
%}


{% if isFoxifyPage %}
{% if global_styles != blank %}
    {{ global_styles }}
{% endif %}

<style data-foxify-theme-settings>
	.f-app {
		--f-container-width: {{ layoutSettings.containerWidth }}px;
		--f-container-narrow-width: {{ layoutSettings.containerNarrowWidth }}px;
		--f-vertical-space: {{ layoutSettings.verticalSpace }}px;
		--f-grid-gap: {{ layoutSettings.gridGap }}px;
	}
</style>
{{ 'foxify-base.css' | asset_url | stylesheet_tag }}
{{ 'foxify-grid.css' | asset_url | stylesheet_tag }}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

<script id="foxify-app-settings">
	window.Foxify = window.Foxify || {}
	Foxify.Strings = {
		addToCart: {{ 'foxify.products.product.add_to_cart' | t | json }},
		soldOut: {{ 'foxify.products.product.sold_out' | t | json }},
		unavailable: {{ 'foxify.products.product.unavailable' | t | json }},
		inStock: {{ 'foxify.products.product.meta.instock' | t | json }},
		noSku: {{ 'foxify.products.product.meta.no_sku' | t | json }},
		outOfStock: {{ 'foxify.products.product.meta.out_of_stock' | t | json }},
		unitPrice: {{ 'foxify.products.product.price.unit_price' | t | json }},
		unitPriceSeparator: {{ 'foxify.products.product.price.unit_price_separator' | t | json }}
	};

	Foxify.Settings = {
		designMode: {{ request.design_mode | json }},
		isMobile: window.matchMedia('screen and (max-width: 639px)').matches,
		template: "{{ template.name }}",
		currency_code: {{ shop.currency | json }},
		money_format: {{ money_format | json }},
		shop_domain: {{ shop.secure_url | json }},
		routes: {
			root: "{{ routes.root_url }}",
			cart: "{{ routes.cart_url }}",
			cart_add_url: "{{ routes.cart_add_url }}",
			cart_change_url: "{{ routes.cart_change_url }}",
			cart_update_url: "{{ routes.cart_update_url }}",
			predictive_search_url: '{{ routes.predictive_search_url }}'
		},
	}
	document.documentElement.classList.add('f:page');
</script>
<script src="{{ 'foxify-vendor.js' | asset_url }}" defer></script>
<script src="{{ 'foxify-global.js' | asset_url }}" defer></script>
<script src="{{ 'foxify-image.js' | asset_url }}" defer></script>
{% endif %}
